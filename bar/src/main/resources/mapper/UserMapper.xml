<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mtp.bar.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="User">
        <id column="user_id" property="userId" />
        <result column="user_name" property="userName" />
        <result column="user_number" property="userNumber" />
        <result column="user_password" property="userPassword" />
        <result column="user_token" property="userToken" />
        <result column="user_type" property="userType" />
        <result column="user_create_time" property="userCreateTime" />
        <result column="user_update_time" property="userUpdateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        user_id, user_name, user_number, user_password, user_type,user_token, user_create_time, user_update_time
    </sql>

</mapper>
